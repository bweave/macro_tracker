{
  "settings": {
    "tabs": [
      {
        "title": "Today",
        "path": "/",
        "image": "chart.bar",
        "selectedImage": "chart.bar.fill"
      },
      {
        "title": "Entries",
        "path": "/entries",
        "image": "note.text",
        "selectedImage":"note.text"
      },
      {
        "title": "Food",
        "path": "/foods",
        "image": "fork.knife",
        "selectedImage": "fork.knife.filled"
      },
      {
        "title": "Me",
        "path": "/account",
        "image": "person.circle",
        "selectedImage": "person.circle.filled"
      }
    ]
  },
  "rules": [
    {
      "patterns": [
        ".*"
      ],
      "properties": {
        "context": "default",
        "pull_to_refresh_enabled": true
      }
    },
    {
      "patterns": [
        "refresh_historical_location"
      ],
      "properties": {
        "presentation": "refresh"
      }
    },
    {
      "patterns": [
        "/new$",
        "/edit$"
      ],
      "properties": {
        "context": "modal",
        "pull_to_refresh_enabled": false
      }
    }
  ]
}
