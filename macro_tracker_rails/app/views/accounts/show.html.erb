<%= content_for :title, "Me" %>

<h1 class="mb-3">Account</h1>
<div class="mb-5">
  <div class="d-flex justify-content-between align-items-baseline mb-3">
    <h2>Set your goals</h2>
    <%= link_to "Macro calculator", new_macro_calculator_path, class: "btn btn-outline-primary" %>
  </div>
  <% @goals.each do |goal| %>
    <%= render partial: "goals/form", locals: { goal: goal } %>
  <% end %>
</div>
<div>
  <%= link_to "Log out", session_path, data: { turbo_method: :delete }, class: "btn btn-outline-danger d-block mb-3" %>
  <%= link_to "Delete account", account_path, data: { turbo_method: :delete, turbo_confirm: "Are you sure? This cannot be undone!" }, class: "text-danger" %>
</div>

