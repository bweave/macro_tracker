<div id="flash-messages">
  <% flash.each do |type, message| %>
    <div class="alert alert-dismissible fade show alert-info">
      <div class="container">
        <div class="d-flex justify-content-between">
          <div class="ps-3"><%= message %></div>
          <button type="button" class="btn-close position-relative p-1" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      </div>
    </div>
  <% end %>
</div>

