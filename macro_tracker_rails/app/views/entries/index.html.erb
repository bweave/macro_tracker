<% content_for :title, "Entries" %>
 
<% if @entries.present? %>
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Entries</h1>
    <%= link_to "Add", new_entry_path, data: { controller: "bridge--button", bridge_ios_image: "plus" }, class: "btn btn-outline-primary" %>
  </div>
  <div id="entries">
    <% @entries.each do |meal, entries| %>
      <div class="mb-3">
        <h3><%= meal.capitalize %></h3>
        <div class="list-group mb-3">
          <% entries.each do |entry| %>
            <%= render entry %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="d-flex justify-content-center">
    <div class="text-center">
      <h2 class="fs-1">No entries added, yet.</h2>
      <p class="lead">Add your first one for today.</p>
      <%= link_to "Add", new_entry_path, data: { controller: "bridge--button", bridge_ios_image: "plus" }, class: "btn btn-outline-primary w-100" %>
    </div>
  </div>
<% end %>
